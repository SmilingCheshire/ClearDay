<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- High pollen alert banner -->
        <LinearLayout
            android:id="@+id/alertContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#FFF6E7"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:elevation="2dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_dialog_alert"
                android:layout_marginEnd="8dp"
                app:tint="#FF9800" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAlertTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#E65100"
                    android:text="High Pollen Alert" />

                <TextView
                    android:id="@+id/tvAlertBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8A6D3B"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:text="Tree pollen levels are high today..." />
            </LinearLayout>

        </LinearLayout>

        <!-- Allergy risk card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Allergy Risk"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAllergyRiskLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:textSize="28sp"
                        android:textColor="#FF6D00"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvAllergyRiskDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Based on your allergen profile"
                        android:textColor="#777777"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- simple circular indicator (fake gauge) -->
                <FrameLayout
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="8dp">

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="75"
                        android:rotation="-90"
                        android:progressDrawable="@drawable/progress_circular_orange" />

                    <TextView
                        android:id="@+id/tvAllergyScore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="7.5"
                        android:textColor="#FF6D00"
                        android:textStyle="bold" />
                </FrameLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Pollen levels card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Pollen Levels"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Row template repeated 3x -->

                <!-- Tree pollen -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        app:tint="#777777" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tree Pollen"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTreeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8.2 grains/m³"
                            android:textSize="12sp"
                            android:textColor="#777777" />

                        <ProgressBar
                            android:id="@+id/pbTree"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:max="100"
                            android:progress="0"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTreeTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="High"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/tag_orange"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Grass pollen -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_crop"
                        app:tint="#777777" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grass Pollen"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvGrassValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.4 grains/m³"
                            android:textSize="12sp"
                            android:textColor="#777777" />

                        <ProgressBar
                            android:id="@+id/pbGrass"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:max="100"
                            android:progress="0"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvGrassTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="Moderate"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/tag_yellow"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Weed pollen -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_week"
                        app:tint="#777777" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weed Pollen"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvWeedValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.1 grains/m³"
                            android:textSize="12sp"
                            android:textColor="#777777" />

                        <ProgressBar
                            android:id="@+id/pbWeed"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:max="100"
                            android:progress="0"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvWeedTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:text="Low"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/tag_green"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- AQI card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Air Quality Index"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAqiValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="42"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvAqiLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good"
                        android:textColor="#2E7D32"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvAqiAdvice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Safe for outdoor activities"
                    android:textColor="#2E7D32"
                    android:textSize="12sp"
                    android:background="#E8F5E9"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Button to open Pollen Activity -->
        <Button
            android:id="@+id/btnOpenPollen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="View Detailed Pollen Screen"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@drawable/tag_orange"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>
